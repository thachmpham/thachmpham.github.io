#! /usr/bin/bash

# ====  global variables
workspace=$(git rev-parse --show-toplevel)


# ====  functions
convert_markdown_to_html() {
    local input_file=$1
    local output_file=$2

    pandoc -f markdown -t html \
    -s --highlight-style tango \
    --include-in-header ${workspace}/bin/header.html \
    --include-after-body ${workspace}/bin/footer.html \
    -F pandoc-plantuml \
    --mathml \
    -o ${output_file} \
    ${input_file}
}

convert_markdown_to_html_with_toc() {
    local input_file=$1
    local output_file=$2

    pandoc -f markdown -t html \
    -s --highlight-style tango \
    --include-in-header ${workspace}/bin/header.html \
    --include-after-body ${workspace}/bin/footer.html \
    -F pandoc-plantuml \
    --mathml \
    --table-of-contents=true --toc-depth=1\
    -o ${output_file} \
    ${input_file}
}

generate_post() {
    local post_name=$1
    convert_markdown_to_html    ${workspace}/md/${post_name}.md \
                                ${workspace}/html/${post_name}.html
}

generate_post_with_toc() {
    local post_name=$1
    convert_markdown_to_html_with_toc    ${workspace}/md/${post_name}.md \
                                ${workspace}/html/${post_name}.html
}

# ====  main()   ==== #


# ====  generate home page
pandoc -f markdown -t html -s \
    --include-after-body ${workspace}/bin/footer_for_home.html \
    -o ${workspace}/index.html \
    ${workspace}/md/index.md


